FROM golang:1.9-alpine AS builder
WORKDIR /go/src/github.com/tsconn23/edgex-go
RUN apk update && apk add make
COPY . .
RUN make cmd/export-client/export-client

FROM scratch
COPY --from=builder /go/src/github.com/tsconn23/edgex-go/cmd/export-client/export-client /
ENTRYPOINT ["/export-client"]
